{
  "port": 9000,
  "endpointConfig": {
    "healthCheck": "health",
    "cache": "cache"
  },
  "networkBufferPool": {
    "poolSize": 50,
    "fillOnCreation": true,
    "bufferSize": 1024
  },
  "httpRequestMemoryPool": {
    "poolSize": 50,
    "fillOnCreation": true,
    "bufferSize": 256
  },
  "incomingCacheRequestPool": {
    "poolSize": 50,
    "fillOnCreation": true,
    "bufferSize": 256
  },
  "threadIdleStrategy": {
    "maxSpins": 1000,
    "maxYields" : 10000,
    "minParkPeriodNs": 100000,
    "maxParkPeriodNs" : 1000000
  },
  "metricsConfig": {
    "enabled": true,
    "port": 9001
  },
  "caches": [
    {
      "name": "yak",
      "maximumKeys": 64,
      "fixedValueSize": 128,
      "valueStorageMechanism": "DirectMemoryStorage",
      "evictionStrategy": "LRU"
    }
  ]
}